---
import { DevLinkProvider } from '../../devlink/DevLinkProvider.js';
import "../../devlink/global.css"; // Webflow Styles
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;800&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Webflow Cloud - Astro Starter</title>
	</head>
	<body>
		<DevLinkProvider client:load>
			<main class="site-main">
				<slot />
			</main>
		</DevLinkProvider>
		<script is:inline>
			const revealTargets = Array.from(document.querySelectorAll("[data-reveal]"));
			revealTargets.forEach((el) => el.classList.add("reveal-ready"));

			const onVisible = (entries, observer) => {
				for (const entry of entries) {
					if (entry.isIntersecting) {
						entry.target.classList.add("is-visible");
						observer.unobserve(entry.target);
					}
				}
			};

			const observer = new IntersectionObserver(onVisible, {
				threshold: 0.16,
				rootMargin: "0px 0px -8% 0px"
			});

			revealTargets.forEach((el) => observer.observe(el));
		</script>
	</body>
</html>

<style>
	:global(:root) {
		--site-radius: 8px;
	}

	:global(html),
	:global(body) {
		background: #ffffff;
		color: #1f2a22;
		font-family: "Roboto", sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.site-main {
		background: #ffffff;
	}

	:global(p) {
		font-weight: 300;
	}

	:global(.hero),
	:global(.facility-selection),
	:global(.references),
	:global(.leading),
	:global(.unique),
	:global(.flex),
	:global(.modules),
	:global(.case-section) {
		background: #ffffff !important;
	}

	:global(.hero .hero-media),
	:global(.facility-selection .group-card),
	:global(.facility-selection .facility-tile),
	:global(.references .logo-card),
	:global(.references .map-block),
	:global(.leading .leading-grid),
	:global(.unique .unique-grid),
	:global(.modules .modules-grid),
	:global(.flex .card img),
	:global(.case-section .note),
	:global(.case-section .cta),
	:global(.case-section .video-card),
	:global(.case-section .play-btn),
	:global(.case-section .speaker),
	:global(.case-section .metric),
	:global(.leading .book-btn),
	:global(.flex .action) {
		border-radius: var(--site-radius) !important;
	}

	:global(.reveal-ready) {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 520ms ease, transform 520ms ease;
		will-change: transform, opacity;
	}

	:global(.reveal-ready.is-visible) {
		opacity: 1;
		transform: translateY(0);
	}

	@media (prefers-reduced-motion: reduce) {
		:global(.reveal-ready) {
			opacity: 1;
			transform: none;
			transition: none;
		}
	}
</style>

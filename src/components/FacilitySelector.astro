---
const lang = Astro.props.lang === "de" ? "de" : "en";
const base = import.meta.env.BASE_URL || "/";
const normalizedBase = base.endsWith("/") ? base : `${base}/`;

const content = lang === "de"
  ? {
      heading: "CUREO passt flexibel in viele Versorgungssettings",
      tiles: [
        {
          name: "Akutkliniken",
          detail: "Frühaktivierungsprotokolle und angeleitete Sitzungen am Patientenbett.",
          href: `${normalizedBase}de/for-inpatient-rehab`,
          image:
            "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/68de6d9e0bc26e4b64672f16_PatientenBettJPG.jpg"
        },
        {
          name: "Rehabilitationskliniken",
          detail: "Zielorientierte Neuro-Reha-Programme mit messbarer Progression.",
          href: `${normalizedBase}de/for-inpatient-rehab`,
          image:
            "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/69032049a209d4dfd000f27d_DSC02952.jpg"
        },
        {
          name: "Ergotherapie",
          detail: "Aufgabenbasiertes Training von oberer Extremität sowie kognitiv-motorischen Funktionen.",
          href: `${normalizedBase}de/for-outpatient-rehab`,
          image:
            "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/6603f187bc897ec6711edc0e_Screenshot%202024-03-27%20at%2011.13.46.jpeg"
        },
        {
          name: "Physiotherapie",
          detail: "Bewegungsorientierte Therapie mit kontrollierter Wiederholung und direktem Feedback.",
          href: `${normalizedBase}de/for-outpatient-rehab`,
          image:
            "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/68da60a30662ac4f4cd799d3_Single_Therapy_PatientinAwe.jpg"
        }
      ]
    }
  : {
      heading: "CUREO fits flexible into many care settings",
      tiles: [
        {
          name: "Acute Clinics",
          detail: "Early activation protocols and guided bedside sessions.",
          href: `${normalizedBase}for-inpatient-rehab`,
          image:
            "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/68de6d9e0bc26e4b64672f16_PatientenBettJPG.jpg"
        },
        {
          name: "Rehabilitation Clinics",
          detail: "Goal-oriented neuro-rehab programs with measurable progression.",
          href: `${normalizedBase}for-inpatient-rehab`,
          image:
            "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/69032049a209d4dfd000f27d_DSC02952.jpg"
        },
        {
          name: "Occupational Therapy",
          detail: "Task-based upper-limb and cognitive-motor training in immersive scenarios.",
          href: `${normalizedBase}for-outpatient-rehab`,
          image:
            "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/6603f187bc897ec6711edc0e_Screenshot%202024-03-27%20at%2011.13.46.jpeg"
        },
        {
          name: "Physical Therapy",
          detail: "Movement-focused therapy with controlled repetition and feedback.",
          href: `${normalizedBase}for-outpatient-rehab`,
          image:
            "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/68da60a30662ac4f4cd799d3_Single_Therapy_PatientinAwe.jpg"
        }
      ]
    };
---

<section class="facility-selection" data-reveal>
  <div class="facility-shell">
    <header class="facility-head">
      <h2>{content.heading}</h2>
    </header>

    <div class="facility-grid">
      {
        content.tiles.map((tile) => (
          <a class="facility-tile" href={tile.href} aria-label={tile.name}>
            <img src={tile.image} alt={tile.name} loading="lazy" />
            <div class="tile-overlay"></div>
            <div class="tile-content">
              <h3>{tile.name}</h3>
              <p>{tile.detail}</p>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .facility-selection {
    background: #ffffff;
    padding: 0.9rem 1.2rem 2rem;
  }

  .facility-shell {
    margin: 0 auto;
    max-width: 1240px;
  }

  .facility-head {
    margin-bottom: 0.85rem;
  }

  .facility-head h2 {
    color: #1d2f1d;
    font-size: clamp(1.35rem, 2vw, 2rem);
    letter-spacing: -0.02em;
    margin: 0;
  }

  .facility-grid {
    display: grid;
    gap: 0.75rem;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .facility-tile {
    border-radius: 8px;
    display: block;
    min-height: 290px;
    overflow: hidden;
    position: relative;
    text-decoration: none;
    transition: transform 200ms ease, opacity 200ms ease;
  }

  .facility-tile img {
    display: block;
    height: 100%;
    object-fit: cover;
    width: 100%;
  }

  .tile-overlay {
    background:
      linear-gradient(180deg, rgba(10, 28, 15, 0.12) 0%, rgba(10, 28, 15, 0.74) 100%),
      linear-gradient(115deg, rgba(94, 152, 50, 0.26), rgba(94, 152, 50, 0.05));
    inset: 0;
    position: absolute;
  }

  .tile-content {
    bottom: 0.8rem;
    color: #f7ffee;
    left: 0.8rem;
    position: absolute;
    right: 0.8rem;
    z-index: 1;
  }

  .tile-content h3 {
    font-size: clamp(1.1rem, 1.5vw, 1.65rem);
    line-height: 1.2;
    margin: 0 0 0.4rem;
  }

  .tile-content p {
    color: #d9efc9;
    font-size: 0.98rem;
    line-height: 1.45;
    margin: 0;
    max-width: 46ch;
  }

  .facility-grid:hover .facility-tile {
    opacity: 0.8;
    transform: scale(0.993);
  }

  .facility-grid .facility-tile:hover {
    opacity: 1;
    transform: translateY(-3px) scale(1.01);
    z-index: 2;
  }

  .facility-tile:focus-visible {
    outline: 3px solid #92bd53;
    outline-offset: 2px;
  }

  @media (max-width: 980px) {
    .facility-grid {
      grid-template-columns: 1fr;
    }

    .facility-tile {
      min-height: 250px;
    }
  }

  @media (max-width: 700px) {
    .facility-selection {
      padding: 0.85rem 0.8rem 1.6rem;
    }
  }
</style>

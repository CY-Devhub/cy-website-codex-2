---
const lang = Astro.props.lang === "de" ? "de" : "en";
const copy = lang === "de"
  ? {
      badge: "CUREO Referenzfall",
      heading: "VR-Therapie in der Neurorehabilitation<br />klar erklärt",
      challengeTitle: "Die Herausforderung",
      challengeText:
        "Komplexe Therapiekonzepte müssen schnell und klar vermittelt werden, damit der klinische Mehrwert auf den ersten Blick sichtbar wird.",
      approachTitle: "Der CUREO Ansatz",
      approachText:
        "Strukturierte Video-Referenzfälle zeigen Therapieablauf, Workflow und Ergebnisse in einem Format für Entscheider, Therapeuten und Versorgungsteams.",
      cta: "Termin buchen",
      meta: "Unverbindlich - nahtlose Integration in bestehende Reha-Prozesse",
      videoTitle: "Video: CUREO in der Praxis",
      playAria: "Video abspielen",
      speaker: "Fallanalyse",
      metrics: [
        {
          icon: "document",
          title: "Therapieformat",
          text: "Immersive VR-Therapie mit klarer Führung und messbaren Übungen"
        },
        {
          icon: "users",
          title: "Versorgungsbereiche",
          text: "Neurologische Reha-Zentren, Kliniken und spezialisierte Praxen"
        },
        {
          icon: "clock",
          title: "Patientennutzen",
          text: "Hohe Motivation durch interaktives Training und direktes Feedback"
        },
        {
          icon: "bolt",
          title: "Teamnutzen",
          text: "Standardisierte Prozesse und transparente Therapiefortschritte"
        }
      ]
    }
  : {
      badge: "CUREO Reference Case",
      heading: "VR Therapy in Neurorehabilitation<br />clearly explained",
      challengeTitle: "The Challenge",
      challengeText:
        "Complex therapy concepts must be communicated quickly and clearly so clinical value becomes visible at first glance.",
      approachTitle: "The CUREO Approach",
      approachText:
        "Structured video cases show therapy process, workflow, and outcomes in a format designed for decision-makers, therapists, and care teams.",
      cta: "Book appointment",
      meta: "No obligation - seamless integration into existing rehab processes",
      videoTitle: "Video: CUREO in Practice",
      playAria: "Play video",
      speaker: "Case Review",
      metrics: [
        {
          icon: "document",
          title: "Therapy Format",
          text: "Immersive VR therapy with clear guidance and measurable exercises"
        },
        {
          icon: "users",
          title: "Care Settings",
          text: "Neurological rehab centers, clinics, and specialized outpatient teams"
        },
        {
          icon: "clock",
          title: "Patient Value",
          text: "High motivation through interactive training and immediate feedback"
        },
        {
          icon: "bolt",
          title: "Team Value",
          text: "Standardized workflows and transparent therapy progress tracking"
        }
      ]
    };
---

<section class="case-section" data-reveal>
  <div class="case-shell">
    <div class="case-grid">
      <div class="case-left">
        <span class="case-badge">{copy.badge}</span>
        <p class="brand">CUREOSITY</p>
        <h1 set:html={copy.heading}></h1>

        <article class="note note-highlight">
          <h2><span></span>{copy.challengeTitle}</h2>
          <p>{copy.challengeText}</p>
        </article>

        <article class="note note-muted">
          <h2><span></span>{copy.approachTitle}</h2>
          <p>{copy.approachText}</p>
        </article>

        <a
          class="cta"
          href="https://meetings-eu1.hubspot.com/cureosity/terminbuchungstool-de"
          target="_blank"
          rel="noopener noreferrer"
        >
          {copy.cta} <strong>&gt;</strong>
        </a>
        <p class="meta">{copy.meta}</p>
      </div>

      <div class="case-right">
        <article class="video-card">
          <div class="video-layer"></div>
          <h2>{copy.videoTitle}</h2>
          <button class="play-btn" type="button" aria-label={copy.playAria}>
            <span class="play-triangle"></span>
          </button>
          <div class="speaker">
            <div class="speaker-avatar"></div>
            <p>{copy.speaker}</p>
          </div>
        </article>

        <div class="metrics">
          {
            copy.metrics.map((item) => (
              <article class="metric">
                <h3>
                  <span class={`icon icon-${item.icon}`}></span>
                  {item.title}
                </h3>
                <p>{item.text}</p>
              </article>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .case-section {
    --cureo-green: hsl(81.95, 65.08%, 37.06%);
    --cureo-green-soft: hsl(81.49, 60.91%, 56.86%);
    --surface: #ffffff;
    --surface-soft: #f5f9ee;
    --line: #d8e7c0;
    --ink: #1b2a1e;
    --copy: #4c5e52;
    --cta-text: #163322;
    background:
      radial-gradient(circle at 90% 4%, rgba(165, 210, 89, 0.2), transparent 40%),
      radial-gradient(circle at 8% 96%, rgba(157, 203, 76, 0.16), transparent 42%),
      linear-gradient(180deg, #fcfef9 0%, #f3f8ec 100%);
    color: var(--ink);
    min-height: auto;
    padding: 2rem 1.2rem 2.2rem;
  }

  .case-shell {
    margin: 0 auto;
    max-width: 1240px;
  }

  .case-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: minmax(320px, 0.95fr) minmax(420px, 1.25fr);
    align-items: start;
  }

  .case-left h1 {
    font-size: clamp(1.8rem, 2.4vw, 2.6rem);
    line-height: 1.05;
    margin: 1.25rem 0 2rem;
    letter-spacing: -0.03em;
    max-width: 15ch;
  }

  .case-badge {
    display: inline-block;
    border-radius: 999px;
    color: #2d4b31;
    font-weight: 500;
    padding: 0.4rem 0.95rem;
    background: rgba(201, 228, 151, 0.24);
  }

  .brand {
    font-weight: 800;
    letter-spacing: 0.06em;
    font-size: 1.5rem;
    margin: 1.75rem 0 0.75rem;
    color: #2d5034;
  }

  .note {
    border-radius: 16px;
    padding: 1.4rem 1.5rem 1.45rem;
    margin-bottom: 1.1rem;
  }

  .note h2 {
    align-items: center;
    display: flex;
    font-size: 1.25rem;
    gap: 0.6rem;
    margin: 0 0 0.65rem;
  }

  .note h2 span {
    border-radius: 999px;
    height: 10px;
    width: 10px;
  }

  .note p {
    color: var(--copy);
    font-size: 1.02rem;
    line-height: 1.55;
    margin: 0;
    max-width: 46ch;
  }

  .note-highlight {
    background: var(--surface);
  }

  .note-highlight h2 span {
    background: var(--cureo-green);
  }

  .note-muted {
    background: var(--surface-soft);
  }

  .note-muted h2 span {
    background: var(--cureo-green-soft);
  }

  .cta {
    align-items: center;
    background: linear-gradient(120deg, var(--cureo-green) 0%, #7fa43b 100%);
    border-radius: 14px;
    color: var(--cta-text);
    display: inline-flex;
    font-size: 1.06rem;
    font-weight: 700;
    gap: 1rem;
    margin-top: 0.2rem;
    padding: 0.72rem 1.2rem;
    text-decoration: none;
    transition: transform 180ms ease;
  }

  .cta:hover {
    transform: translateY(-1px);
  }

  .cta strong {
    font-size: 1.05rem;
    margin-top: -1px;
  }

  .meta {
    color: #5f715f;
    font-size: 0.95rem;
    margin-top: 1.1rem;
  }

  .video-card {
    background:
      linear-gradient(130deg, rgba(245, 249, 238, 0.9), rgba(238, 245, 228, 0.9)),
      radial-gradient(circle at 18% 88%, rgba(184, 223, 119, 0.22), transparent 55%),
      linear-gradient(160deg, #f3f8ec 0%, #eef5e3 50%, #f7fbf1 100%);
    border-radius: 20px;
    min-height: 360px;
    overflow: hidden;
    padding: 2.2rem;
    position: relative;
  }

  .video-layer {
    background:
      linear-gradient(90deg, rgba(226, 239, 207, 0.58), rgba(226, 239, 207, 0.15)),
      radial-gradient(circle at 78% 18%, rgba(174, 208, 141, 0.36), transparent 33%),
      linear-gradient(155deg, rgba(255, 255, 255, 0.24), rgba(255, 255, 255, 0));
    inset: 0;
    position: absolute;
  }

  .video-card h2 {
    color: #244025;
    font-size: clamp(1.3rem, 2vw, 2rem);
    letter-spacing: -0.02em;
    margin: 0;
    position: relative;
    text-shadow: none;
    z-index: 1;
  }

  .play-btn {
    align-items: center;
    background: linear-gradient(140deg, #87ad43 0%, var(--cureo-green) 100%);
    border: 0;
    border-radius: 20px;
    bottom: 37%;
    cursor: pointer;
    display: inline-flex;
    height: 68px;
    justify-content: center;
    left: 50%;
    position: absolute;
    transform: translateX(-50%);
    width: 108px;
    z-index: 2;
  }

  .play-triangle {
    border-bottom: 11px solid transparent;
    border-left: 18px solid #fff;
    border-top: 11px solid transparent;
    margin-left: 5px;
  }

  .speaker {
    align-items: center;
    background: rgba(255, 255, 255, 0.92);
    border-radius: 14px;
    bottom: 0.8rem;
    color: #325134;
    display: flex;
    gap: 0.8rem;
    padding: 0.55rem 0.8rem;
    position: absolute;
    right: 0.8rem;
    z-index: 2;
  }

  .speaker-avatar {
    background: linear-gradient(145deg, #d8e8c9, #8ca874);
    border-radius: 999px;
    height: 38px;
    width: 38px;
  }

  .speaker p {
    font-size: 0.9rem;
    margin: 0;
  }

  .metrics {
    display: grid;
    gap: 0.9rem;
    grid-template-columns: repeat(2, minmax(150px, 1fr));
    margin-top: 1.1rem;
  }

  .metric {
    background: rgba(255, 255, 255, 0.88);
    border-radius: 14px;
    padding: 1rem 1.1rem;
  }

  .metric h3 {
    align-items: center;
    display: flex;
    font-size: 1.08rem;
    gap: 0.6rem;
    margin: 0 0 0.65rem;
  }

  .metric p {
    color: #576656;
    font-size: 0.95rem;
    line-height: 1.45;
    margin: 0;
  }

  .icon {
    display: inline-block;
    height: 1.1rem;
    position: relative;
    width: 1.1rem;
  }

  .icon::before,
  .icon::after {
    content: "";
    position: absolute;
  }

  .icon-document {
    border: 1.5px solid var(--cureo-green);
    border-radius: 2px;
  }

  .icon-document::before {
    border-top: 1.5px solid var(--cureo-green);
    left: 2px;
    right: 2px;
    top: 3px;
  }

  .icon-users::before,
  .icon-users::after {
    border: 1.5px solid var(--cureo-green);
    border-radius: 999px;
    height: 5px;
    top: 0;
    width: 5px;
  }

  .icon-users::before {
    left: 0;
  }

  .icon-users::after {
    right: 0;
  }

  .icon-users {
    border-bottom: 1.5px solid var(--cureo-green);
    border-radius: 8px;
    height: 9px;
    margin-top: 2px;
  }

  .icon-clock {
    border: 1.5px solid var(--cureo-green);
    border-radius: 999px;
  }

  .icon-clock::before {
    background: var(--cureo-green);
    height: 4px;
    left: 5px;
    top: 1px;
    width: 1.5px;
  }

  .icon-clock::after {
    background: var(--cureo-green);
    height: 1.5px;
    left: 5px;
    top: 5px;
    width: 3px;
  }

  .icon-bolt::before {
    border-left: 5px solid transparent;
    border-right: 3px solid transparent;
    border-top: 8px solid var(--cureo-green);
    left: 1px;
    top: 0;
    transform: skewX(-14deg);
  }

  .icon-bolt::after {
    border-left: 3px solid transparent;
    border-right: 5px solid transparent;
    border-top: 8px solid var(--cureo-green);
    left: 2px;
    top: 5px;
    transform: rotate(180deg) skewX(-10deg);
  }

  @media (max-width: 1020px) {
    .case-grid {
      gap: 2rem;
      grid-template-columns: 1fr;
    }

    .video-card { min-height: 320px; }
  }

  @media (max-width: 640px) {
    .case-section {
      padding: 1.2rem 0.8rem 1.6rem;
    }

    .case-left h1 {
      margin-bottom: 1.4rem;
    }

    .note {
      padding: 1.05rem 1rem;
    }

    .note h2 {
      font-size: 1.06rem;
    }

    .note p {
      font-size: 0.94rem;
    }

    .metrics {
      grid-template-columns: 1fr;
    }

    .meta {
      font-size: 0.9rem;
      line-height: 1.5;
    }
  }
</style>

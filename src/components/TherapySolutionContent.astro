---

<section class="solution-page" data-reveal>
  <div class="shell">
    <section class="hero">
      <div class="hero-text">
        <h1>{copy.heroTitle}</h1>
        <p>{copy.heroSubtitle}</p>
      </div>
      <img src={heroImage.src} alt={copy.heroTitle} loading="eager" />
    </section>

    <section class="intro card">
      <div class="intro-callout">
        <h2>{copy.introTitle}</h2>
        <p>{copy.introBody}</p>
        <ul>
          <li>{copy.introBulletA}</li>
          <li>{copy.introBulletB}</li>
          <li>{copy.introBulletC}</li>
        </ul>
      </div>
      <img src={introImage.src} alt={copy.introTitle} loading="lazy" />
    </section>

    <section class="workflow card">
      <h2>{copy.workflowTitle}</h2>
      <p>{copy.workflowBody}</p>
      <div class="two-up">
        <article>
          <img src={workflowA.src} alt={copy.workflowA} loading="lazy" />
          <p>{copy.workflowA}</p>
        </article>
        <article>
          <img src={workflowB.src} alt={copy.workflowB} loading="lazy" />
          <p>{copy.workflowB}</p>
        </article>
      </div>
      <div class="platform-grid">
        <article class="platform-card wide">
          <img src={hubMock.src} alt={copy.platformCardTitle} loading="lazy" />
          <div>
            <h3>{copy.platformCardTitle}</h3>
            <p>{copy.platformCardBody}</p>
          </div>
        </article>
        <article class="platform-card">
          <img src={reportMock.src} alt={copy.reportCardTitle} loading="lazy" />
          <div>
            <h3>{copy.reportCardTitle}</h3>
            <p>{copy.reportCardBody}</p>
          </div>
        </article>
        <article class="platform-card">
          <img src={difficultyMock.src} alt={copy.settingsCardTitle} loading="lazy" />
          <div>
            <h3>{copy.settingsCardTitle}</h3>
            <p>{copy.settingsCardBody}</p>
          </div>
        </article>
      </div>
    </section>

    <section class="outcomes card">
      <h2>{copy.outcomesTitle}</h2>
      <p>{copy.outcomesBody}</p>
      <div class="stats">
        <article>
          <strong>{copy.statAValue}</strong>
          <span>{copy.statALabel}</span>
        </article>
        <article>
          <strong>{copy.statBValue}</strong>
          <span>{copy.statBLabel}</span>
        </article>
        <article>
          <strong>{copy.statCValue}</strong>
          <span>{copy.statCLabel}</span>
        </article>
      </div>
    </section>

    <section class="modules card">
      <h2>{copy.modulesTitle}</h2>
      <p>{copy.modulesBody}</p>
      <div class="module-grid">
        {
          copy.modules.map((module) => (
            <article class="module-item">
              <img src={module.icon} alt={`${module.name} module`} loading="lazy" />
              <h3>{module.name}</h3>
            </article>
          ))
        }
      </div>
    </section>

    <section class="platform-final card">
      <div class="text">
        <h2>{copy.platformTitle}</h2>
        <p>{copy.platformBody}</p>
      </div>
      <div class="images">
        <img src={navigatorImage.src} alt={copy.platformTitle} loading="lazy" />
        <img src={bedsideImage.src} alt={copy.platformTitle} loading="lazy" />
      </div>
    </section>

    <section class="faq card">
      <h2>{copy.faqTitle}</h2>
      <div class="faq-list">
        {
          copy.faqs.map((item, index) => (
            <details open={index === 0}>
              <summary>{item.q}</summary>
              <p>{item.a}</p>
            </details>
          ))
        }
      </div>
    </section>

    <section class="cta-band">
      <h2>{copy.ctaTitle}</h2>
      <a
        href="https://meetings-eu1.hubspot.com/cureosity/terminbuchungstool-de"
        target="_blank"
        rel="noopener noreferrer"
      >
        {copy.ctaButton}
      </a>
    </section>
  </div>
</section>

<style>
  .solution-page {
    background: #fff;
    padding: 1rem 1.2rem 2rem;
  }

  .shell {
    margin: 0 auto;
    max-width: 1240px;
  }

  .hero {
    display: grid;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .hero h1 {
    color: #19301d;
    font-size: clamp(1.8rem, 4vw, 3rem);
    line-height: 1.08;
    margin: 0;
  }

  .hero p {
    color: #4d6153;
    font-size: clamp(1rem, 1.5vw, 1.2rem);
    margin: 0.5rem 0 0;
    max-width: 62ch;
  }

  .hero img {
    border-radius: 8px;
    display: block;
    width: 100%;
    aspect-ratio: 16 / 7;
    object-fit: cover;
  }

  .card {
    background: #f8fbf4;
    border-radius: 8px;
    margin-bottom: 1rem;
    padding: 1rem;
  }

  .intro {
    display: grid;
    gap: 1rem;
    grid-template-columns: minmax(280px, 1fr) minmax(280px, 1fr);
    align-items: stretch;
  }

  .intro-callout {
    background: #6f9c21;
    border-radius: 8px;
    color: #fff;
    padding: 1rem;
  }

  .intro-callout h2,
  .workflow h2,
  .outcomes h2,
  .modules h2,
  .platform-final h2,
  .faq h2 {
    margin: 0 0 0.6rem;
    color: #19301d;
    font-size: clamp(1.35rem, 2vw, 2rem);
  }

  .intro-callout h2 {
    color: #fff;
  }

  .intro-callout p {
    color: rgba(255, 255, 255, 0.96);
    margin: 0 0 0.7rem;
  }

  .intro-callout ul {
    margin: 0;
    padding-left: 1.1rem;
  }

  .intro img {
    border-radius: 8px;
    width: 100%;
    height: 100%;
    min-height: 260px;
    object-fit: cover;
  }

  .workflow > p,
  .outcomes > p,
  .modules > p,
  .platform-final p {
    color: #4d6153;
    margin: 0 0 0.8rem;
  }

  .two-up {
    display: grid;
    gap: 0.8rem;
    grid-template-columns: repeat(2, minmax(220px, 1fr));
    margin-bottom: 0.9rem;
  }

  .two-up article {
    background: #fff;
    border-radius: 8px;
    padding: 0.55rem;
  }

  .two-up img {
    border-radius: 8px;
    width: 100%;
    aspect-ratio: 16 / 10;
    object-fit: cover;
  }

  .two-up p {
    color: #304334;
    font-size: 0.95rem;
    margin: 0.45rem 0 0;
  }

  .platform-grid {
    display: grid;
    gap: 0.8rem;
    grid-template-columns: repeat(2, minmax(220px, 1fr));
  }

  .platform-card {
    background: #fff;
    border-radius: 8px;
    padding: 0.55rem;
  }

  .platform-card.wide {
    grid-column: 1 / -1;
  }

  .platform-card img {
    border-radius: 8px;
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: contain;
    background: #fff;
  }

  .platform-card h3 {
    color: #213724;
    font-size: 1.03rem;
    margin: 0.55rem 0 0.2rem;
  }

  .platform-card p {
    color: #4d6153;
    margin: 0;
    font-size: 0.93rem;
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(3, minmax(180px, 1fr));
    gap: 0.8rem;
  }

  .stats article {
    background: #fff;
    border-radius: 8px;
    padding: 0.9rem;
    text-align: center;
  }

  .stats strong {
    color: #6f9c21;
    display: block;
    font-size: clamp(1.7rem, 3.2vw, 2.4rem);
    line-height: 1;
    margin-bottom: 0.35rem;
  }

  .stats span {
    color: #3e5142;
    font-size: 0.9rem;
    line-height: 1.35;
  }

  .module-grid {
    display: grid;
    gap: 0.8rem;
    grid-template-columns: repeat(4, minmax(150px, 1fr));
  }

  .module-item {
    background: #fff;
    border-radius: 8px;
    padding: 0.8rem 0.6rem;
    text-align: center;
  }

  .module-item img {
    display: block;
    height: 58px;
    margin: 0 auto 0.5rem;
    max-width: 100%;
    object-fit: contain;
  }

  .module-item h3 {
    color: #2a3f2d;
    font-size: 0.96rem;
    margin: 0;
  }

  .platform-final {
    display: grid;
    gap: 0.85rem;
  }

  .images {
    display: grid;
    gap: 0.8rem;
    grid-template-columns: repeat(2, minmax(220px, 1fr));
  }

  .images img {
    border-radius: 8px;
    width: 100%;
    aspect-ratio: 16 / 10;
    object-fit: cover;
  }

  .faq-list details {
    background: #fff;
    border-radius: 8px;
    margin-bottom: 0.55rem;
    padding: 0.72rem 0.8rem;
  }

  .faq-list summary {
    color: #1f3422;
    cursor: pointer;
    font-weight: 600;
  }

  .faq-list p {
    color: #4d6153;
    margin: 0.5rem 0 0;
  }

  .cta-band {
    align-items: center;
    background: #6f9c21;
    border-radius: 8px;
    color: #fff;
    display: grid;
    gap: 0.7rem;
    justify-items: center;
    padding: 1.2rem 1rem;
    text-align: center;
  }

  .cta-band h2 {
    font-size: clamp(1.25rem, 2vw, 1.8rem);
    margin: 0;
  }

  .cta-band a {
    background: #fff;
    border-radius: 8px;
    color: #496f13;
    display: inline-block;
    font-weight: 700;
    padding: 0.65rem 1.1rem;
    text-decoration: none;
  }

  @media (max-width: 980px) {
    .intro,
    .two-up,
    .platform-grid,
    .stats,
    .images {
      grid-template-columns: 1fr;
    }

    .module-grid {
      grid-template-columns: repeat(2, minmax(140px, 1fr));
    }
  }

  @media (max-width: 700px) {
    .solution-page {
      padding: 0.85rem 0.8rem 1.6rem;
    }

    .hero img {
      aspect-ratio: 16 / 9;
    }
  }
</style>

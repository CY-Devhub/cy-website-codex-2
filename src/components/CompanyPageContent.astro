---

<section class="company-page" data-reveal>
  <div class="shell">
    <section class="hero block">
      <h1>{copy.heroTitle}</h1>
      <img src={copy.heroImage} alt={copy.heroTitle} loading="eager" />
    </section>

    <section class="leaders block">
      <h2>{copy.teamTitle}</h2>
      <div class="leader-grid">
        {
          copy.teamMembers.map((member) => (
            <article class="leader-card">
              <img src={member.image} alt={member.name} loading="lazy" />
              <h3>{member.name}</h3>
              <p class="role">{member.role}</p>
              <p class="summary">{member.summary}</p>
              <div class="actions">
                <a href={member.email}>{copy.emailCta}</a>
                <a href={member.linkedin} target="_blank" rel="noopener noreferrer">
                  {copy.linkedinCta}
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </section>

    <section class="about block">
      <h2>{copy.aboutTitle}</h2>
      <p>{copy.aboutBody}</p>
      <img src={copy.aboutImage} alt={copy.aboutTitle} loading="lazy" />
    </section>

    <section class="split block">
      <article class="text-card">
        <h3>{copy.founderTitle}</h3>
        <p>{copy.founderBodyA}</p>
        <p>{copy.founderBodyB}</p>
      </article>
      <img src={copy.founderImage} alt={copy.founderTitle} loading="lazy" />
    </section>

    <section class="split block reverse">
      <article class="text-card">
        <h3>{copy.cultureTitle}</h3>
        <p>{copy.cultureBodyA}</p>
        <p>{copy.cultureBodyB}</p>
      </article>
      <img src={copy.cultureImage} alt={copy.cultureTitle} loading="lazy" />
    </section>

    <section class="awards block">
      <div class="award-grid" role="list" aria-label={copy.awardsTitle}>
        {
          awardLogos.map((logo) => (
            <article role="listitem" class="award-logo">
              <img src={logo} alt="Award logo" loading="lazy" />
            </article>
          ))
        }
      </div>
      <article class="text-card">
        <h3>{copy.awardsTitle}</h3>
        <p>{copy.awardsBody}</p>
      </article>
    </section>

    <section class="locations block">
      <h2>{copy.locationsTitle}</h2>
      <div class="location-grid">
        {
          copy.locations.map((location) => (
            <article class="location-card">
              <h3>{location.name}</h3>
              <p class="city">{location.city}</p>
              <img src={location.image} alt={`${location.name} ${location.city}`} loading="lazy" />
              <p class="address">{location.address}</p>
            </article>
          ))
        }
      </div>
    </section>

    <section class="next block">
      <h2>{copy.nextTitle}</h2>
      <div class="next-grid">
        {
          copy.nextCards.map((card) => (
            <article class="next-card">
              <h3>{card.title}</h3>
              <a href={card.href}>{card.cta}</a>
            </article>
          ))
        }
      </div>
    </section>
  </div>
</section>

<style>
  .company-page {
    background: #fff;
    padding: clamp(1rem, 2vw, 1.8rem) clamp(0.9rem, 2.4vw, 1.6rem) clamp(2rem, 4vw, 3.2rem);
  }

  .shell {
    margin: 0 auto;
    max-width: 1240px;
    display: grid;
    gap: 1.12rem;
  }

  .block {
    background: #f7f9f6;
    border-radius: 8px;
    padding: clamp(1rem, 2vw, 1.5rem);
  }

  .hero h1,
  .leaders h2,
  .about h2,
  .locations h2,
  .next h2 {
    color: #1f3326;
    font-size: clamp(1.45rem, 2.8vw, 2.5rem);
    letter-spacing: -0.02em;
    line-height: 1.13;
    margin: 0 0 0.9rem;
    text-align: center;
  }

  .hero img {
    width: 100%;
    border-radius: 8px;
    aspect-ratio: 16 / 8;
    object-fit: cover;
  }

  .leader-grid,
  .location-grid,
  .next-grid {
    display: grid;
    gap: 0.8rem;
  }

  .leader-grid,
  .location-grid,
  .next-grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }

  .leader-card,
  .location-card,
  .next-card,
  .text-card,
  .award-logo {
    background: #fff;
    border-radius: 8px;
    padding: 0.8rem;
  }

  .leader-card {
    display: grid;
    grid-template-rows: auto auto auto 1fr auto;
    gap: 0.38rem;
  }

  .leader-card img {
    width: 100%;
    border-radius: 8px;
    aspect-ratio: 4 / 5;
    object-fit: contain;
    background: #f8faf6;
  }

  .leader-card h3,
  .location-card h3,
  .next-card h3 {
    color: #22362a;
    font-size: clamp(1.02rem, 1.35vw, 1.2rem);
    margin: 0;
  }

  .leader-card .role {
    color: #5f871d;
    font-size: 0.94rem;
    font-weight: 500;
    margin: 0;
  }

  .leader-card .summary,
  .about p,
  .text-card p {
    color: #415549;
    font-size: clamp(0.95rem, 1.04vw, 1.02rem);
    line-height: 1.56;
    margin: 0;
  }

  .actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
    margin-top: 0.25rem;
  }

  .actions a,
  .next-card a {
    background: #6f9c21;
    border-radius: 8px;
    color: #fff;
    display: inline-block;
    font-size: 0.9rem;
    font-weight: 700;
    line-height: 1;
    padding: 0.6rem 0.9rem;
    text-decoration: none;
    transition: background 180ms ease, transform 180ms ease;
  }

  .about {
    text-align: center;
  }

  .about p {
    margin: 0 auto 0.8rem;
    max-width: 90ch;
  }

  .about img {
    width: 100%;
    border-radius: 8px;
    aspect-ratio: 16 / 8;
    object-fit: cover;
  }

  .split,
  .awards {
    display: grid;
    gap: 0.8rem;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    align-items: stretch;
  }

  .split img {
    width: 100%;
    border-radius: 8px;
    min-height: 100%;
    object-fit: cover;
  }

  .text-card {
    display: grid;
    align-content: start;
    gap: 0.55rem;
  }

  .text-card h3 {
    color: #23362a;
    font-size: clamp(1.2rem, 1.7vw, 1.6rem);
    letter-spacing: -0.01em;
    margin: 0;
  }

  .award-grid {
    display: grid;
    gap: 0.65rem;
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .award-logo {
    align-items: center;
    display: flex;
    justify-content: center;
    min-height: 140px;
  }

  .award-logo img {
    width: 100%;
    max-width: 220px;
    max-height: 90px;
    object-fit: contain;
  }

  .location-card {
    display: grid;
    gap: 0.35rem;
    text-align: center;
  }

  .location-card .city {
    color: #5f871d;
    font-weight: 500;
    margin: 0;
  }

  .location-card img {
    width: 100%;
    border-radius: 8px;
    aspect-ratio: 16 / 10;
    object-fit: cover;
  }

  .location-card .address {
    color: #4b6052;
    font-size: 0.93rem;
    margin: 0.2rem 0 0;
  }

  .next-card {
    display: grid;
    gap: 0.6rem;
    justify-items: center;
    text-align: center;
  }

  @media (hover: hover) {
    .actions a:hover,
    .next-card a:hover {
      background: #5f891d;
      transform: translateY(-1px);
    }
  }

  @media (max-width: 1080px) {
    .leader-grid,
    .location-grid,
    .next-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 900px) {
    .split,
    .awards {
      grid-template-columns: 1fr;
    }

    .split.reverse .text-card {
      order: -1;
    }
  }

  @media (max-width: 700px) {
    .company-page {
      padding: 0.85rem 0.8rem 1.7rem;
    }

    .leader-grid,
    .location-grid,
    .next-grid {
      grid-template-columns: 1fr;
    }

    .hero img,
    .about img {
      aspect-ratio: 16 / 9;
    }
  }
</style>

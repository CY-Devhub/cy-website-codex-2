---
const heroImage =
  "https://cdn.prod.website-files.com/6548c6e5ab9a929dbb64e897/68d6747e333b7248b8879b4c_DSC09351%20(1).webp";
const lang = Astro.props.lang === "de" ? "de" : "en";
const base = import.meta.env.BASE_URL || "/";
const normalizedBase = base.endsWith("/") ? base : `${base}/`;
const secondaryHref = lang === "de"
  ? `${normalizedBase}de/our-therapy-solution`
  : `${normalizedBase}our-therapy-solution`;
const copy = lang === "de"
  ? {
      title: "Mehr Therapie, weniger Stress: CUREO für Ihre medizinische Einrichtung",
      imageAlt: "VR-Therapiesitzung in einem Rehabilitationsumfeld",
      primaryCta: "Termin buchen",
      secondaryCta: "CUREO in Aktion sehen",
      proof: "Über 300 Einrichtungen vertrauen CUREO · 50+ interaktive Therapieübungen · Für Kliniken und Praxen"
    }
  : {
      title: "More therapy, less stress: CUREO for your medical institution",
      imageAlt: "VR therapy session in rehabilitation setting",
      primaryCta: "Book appointment",
      secondaryCta: "See CUREO in action",
      proof: "Trusted by 300+ institutions · 50+ interactive therapy exercises · Built for clinics and practices"
    };
---

<section class="hero" data-reveal>
  <div class="hero-shell">
    <div class="hero-media">
      <img src={heroImage} alt={copy.imageAlt} loading="eager" />
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <h1>{copy.title}</h1>
        <div class="hero-actions">
          <a
            class="hero-btn hero-btn-primary"
            href="https://meetings-eu1.hubspot.com/cureosity/terminbuchungstool-de"
            target="_blank"
            rel="noopener noreferrer"
          >
            {copy.primaryCta}
          </a>
          <a class="hero-btn hero-btn-secondary" href={secondaryHref}>
            {copy.secondaryCta}
          </a>
        </div>
        <p class="hero-proof">{copy.proof}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background: #ffffff;
    padding: 1.2rem 1.2rem 1.6rem;
  }

  .hero-shell {
    margin: 0 auto;
    max-width: 1240px;
  }

  .hero-media {
    border: 1px solid #d9e5d2;
    border-radius: 8px;
    min-height: 420px;
    overflow: hidden;
    position: relative;
  }

  .hero-media img {
    display: block;
    height: 100%;
    min-height: 420px;
    object-fit: cover;
    width: 100%;
  }

  .hero-overlay {
    background:
      linear-gradient(105deg, rgba(20, 42, 24, 0.76) 0%, rgba(20, 42, 24, 0.26) 62%, rgba(20, 42, 24, 0.15) 100%),
      linear-gradient(180deg, rgba(111, 156, 33, 0.08), transparent 42%);
    inset: 0;
    position: absolute;
  }

  .hero-content {
    bottom: clamp(1.4rem, 5vw, 3rem);
    color: #ffffff;
    left: clamp(1.2rem, 4vw, 3rem);
    max-width: min(760px, 90%);
    position: absolute;
    z-index: 1;
  }

  .hero-content h1 {
    color: #ffffff;
    font-size: clamp(1.8rem, 4.3vw, 3.7rem);
    letter-spacing: -0.02em;
    line-height: 1.07;
    margin: 0;
    text-wrap: balance;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-top: 1rem;
  }

  .hero-btn {
    border-radius: 8px;
    display: inline-flex;
    font-size: 0.95rem;
    font-weight: 700;
    padding: 0.62rem 1rem;
    text-decoration: none;
    transition: transform 160ms ease;
  }

  .hero-btn:hover {
    transform: translateY(-1px);
  }

  .hero-btn-primary {
    background: #6f9c21;
    color: #ffffff;
  }

  .hero-btn-secondary {
    background: rgba(255, 255, 255, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.65);
    color: #ffffff;
    font-size: 0.95rem;
    font-weight: 700;
    padding: 0.62rem 1rem;
    text-decoration: none;
  }

  .hero-proof {
    color: rgba(244, 252, 238, 0.95);
    font-size: 0.9rem;
    font-weight: 400;
    line-height: 1.45;
    margin: 0.7rem 0 0;
  }

  @media (max-width: 700px) {
    .hero {
      padding: 1rem 0.8rem 1.5rem;
    }

    .hero-media,
    .hero-media img {
      min-height: 360px;
    }

    .hero-content h1 {
      max-width: 96%;
    }

    .hero-proof {
      font-size: 0.84rem;
    }
  }
</style>
